import java.util.Scanner;

public class CincoPuntoDiez {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        int numero;

        for (;;) { // bucle infinito
            System.out.print("Ingrese un número entre 1 y 5: ");
            numero = sc.nextInt();

            if (numero >= 1 && numero <= 5) {
                System.out.println("Número correcto: " + numero);
                break;
            } else {
                System.out.println("Fuera de rango, intente otra vez.");
            }
        }
    }
}
